<h2>Update Pet Info</h2>
<section>
  <div class="form">
    <%= form_for @pet do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.label "Image URL" %>
    <%= f.text_field :pic_url %>

    <%= f.label :pet_type %>
    <%= f.select(:pet_type, Pet::PET_TYPES) %>

    <%= f.label :birth_date %>
    <%= date_field(:pet, :birth_date) %>

    <%= f.label :description %>
    <%= f.text_area :description %>

    <%= f.submit "Update"%>
    <% end %>

    <%= form_for @pet, method: :delete do |f| %>
      <%= f.submit "Remove Pet", class: "delete" %>
    <% end %>
  </div>

</section>
