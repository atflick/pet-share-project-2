<h2>Add New Pet</h2>
<section>
  <div class="form">
    <%= form_for @pet do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.label "Image URL" %>
    <%= f.text_field :pic_url %>

    <%= f.label :pet_type %>
    <%= f.select(:pet_type, Pet::PET_TYPES) %>

    <%= f.label :birth_date %>
    <%= date_field(:pet, :birth_date) %>

    <%= f.label :description %>
    <%= f.text_area :description %>

    <%= f.hidden_field :user_id, :value => current_user.id %>

    <%= f.submit "Add"%>
    <% end %>
  </div>
</section>
