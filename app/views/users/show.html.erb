<header class="profile-tabs">
  <h2 id="personal-tab" class="active-header">Personal</h2>
  <h2 id="pets-tab">Pets</h2>
</header>

<section>
  <div class="user-profile active">
    <div class="flex-container show-row">
      <div class="flex-cell-2-3">
        <h4><span>Name:</span> <%= @user.first_name%> <%= @user.last_name%></h4>
        <h4><span>Email:</span> <%= @user.email%></h4>
        <h4><span>Phone:</span> <%= @user.phone%></h4>
        <h4><span>Address:</span> <%= "#{@user.address}, #{@user.city}, #{@user.state} #{@user.zip_code}"%></h4>
        <p><span>Bio:</span> <%= @user.bio%></p>
      </div>

      <div class="flex-cell-1-3 flex-right">
        <img src="<%= @user.profile_pic_url == nil ? @user.profile_pic_url : image_url("blank-profile-picture.png")%>" class="profile-pic">
      </div>
      <%= link_to "Edit Profile", edit_user_registration_path, class: "btn" %>
    </div>

  </div>
  <div class="pet-profiles">
    <div class="flex-container show-row">
      <% @pets.each do |pet| %>
      <div class="flex-cell-2-3">
        <h4><span>Name:</span> <%= pet.name %></h4>
        <h4><span>Type:</span> <%= pet.pet_type %></h4>
        <h4><span>Age:</span> <%= pet.age %></h4>
        <p><span>Description:</span> <%= pet.description %></p>
        <%= link_to "Edit Pet", edit_pet_path(pet), class:"simple-link" %>
      </div>

      <div class="flex-cell-1-3 flex-right">
        <img src="<%= pet.pic_url == nil ? pet.pic_url : image_url("paw-print.png")%>" class="profile-pic">
      </div>
      <% end %>

      <%= link_to "Add Pet", new_pet_path, class: "btn"  %>
    </div>
  </div>
</section>
