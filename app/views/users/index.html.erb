
<section>
  <% @users.each do |user| %>
    <div class="show-row flex-container">
      
      <div class="flex-cell-2-3">
        <h4><span>Name:</span> <%= user.first_name %> <%= user.last_name %></h4>
        <h4><span>Location:</span> <%= user.city %>, <%= user.state %></h4>
        <h4><span>Pets:</span>
          <% Pet.where("user_id = #{user.id}").each do |pet| %>
            <%= link_to pet.name, pet_path(pet.id) %>
          <% end %>
        </h4>
      </div>

      <div class="flex-cell-1-3 flex-right">
        <img src="<%= user.profile_pic_url == nil ? user.profile_pic_url : image_url("blank-profile-picture.png")%>">
      </div>

    </div>
  <% end %>
</section>
