<h2>Sign up</h2>
<section>
  <div class="form">

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

      <%= f.label :email %>
      <%= f.email_field :email, autofocus: true %>

      <%= f.label :password %>

      <%= f.password_field :password, autocomplete: "off" %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>

      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, autocomplete: "off" %>

      <%= f.label :first_name %>
      <%= f.text_field :first_name %>

      <%= f.label :last_name %>
      <%= f.text_field :last_name %>

      <!-- add some sort of preview using JS? -->
      <%= f.label :profile_pic_url %>
      <%= f.text_field :profile_pic_url %>

      <!-- need phone number formatting -->
      <%= f.label :phone %>
      <%= f.text_field :phone %>

      <%= f.label :address %>
      <%= f.text_field :address %>

      <%= f.label :city %>
      <%= f.text_field :city %>

      <!-- drop down for states -->
      <%= f.label :state %>
      <%= f.select(:state, User::STATES) %>

      <!-- format to 5 digit number -->
      <%= f.label :zip_code %>
      <%= f.text_field :zip_code %>

      <%= f.label :bio %>
      <%= f.text_area :bio %>

      <!-- need a drop down -->
      <%= f.label "User Type" %>
      <%= f.select(:user_type, User::USER_TYPES) %>

      <%= f.submit "Sign up", class: "btn" %>

    <% end %>
  </div>
</section>
